{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "declaration": false,
    "paths": {
      "@packages/*": ["../packages/*/src"]
    },
    "skipLibCheck": true
    // "declarationMap": false,
    // "declarationDir": "./dist"
  },
  "exclude": ["./demo/**", "**/dist/**"]
}
